block append css
block content
  main.main
    .main__container
      .main__header
        .main__title
          h1 Admin
          button.btn.mr-auto.main__option(type="button" data-toggle="modal" data-target="#newAdmin")
            i.material-icons add
            span Add New Admin
        ul.main__others.list-unstyled
          li
            a(href="#")
              i.material-icons search
          li
            a(href="#")
              i.material-icons notifications_active

        .
          <!-- Modal -->
          <!--new admin-->
          <div class="modal fade" id="newAdmin" tabindex="-1" role="dialog" aria-labelledby="newAdminLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="newAdminLabel">New Admin</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="modal--admin">
                  <form>
                    <div class="admin--group pt-0">
                      <h2>Account</h2>
                      <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="name" class="name" id="name">
                      </div>
                      <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" type="email" class="email" id="email">
                      </div>
                    </div>
                    <div class="admin--group">
                      <h2>Verification</h2>
                      <div class="form--notice">
                        <div class="verify--status">
                          <span class="material-icons clr--warning">warning</span>
                          <p class="font-weight-bold">Unverified</p>
                        </div>
                      </div>
                      <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Send Verification Mail</button>
                      </div>
                    </div>
                    <div class="admin--group">
                      <div class="form-group">
                        <h2>Access Level</h2>
                        <select class="form-control">
                          <option value="" disabled selected>-Choose access level-</option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                          <option value="5">5</option>
                        </select>
                      </div>
                    </div>
                    <div class="admin--group">
                      <div class="form-group">
                        <h2>Custom Access</h2>
                        <div class="form-group form-check">
                          <input type="checkbox" class="form-check-input" id="exampleCheck1">
                          <label class="form-check-label" for="exampleCheck1">Lecture</label>
                          <input type="checkbox" class="form-check-input" id="exampleCheck2">
                          <label class="form-check-label" for="exampleCheck2">Coupon</label>
                          <input type="checkbox" class="form-check-input" id="exampleCheck3">
                          <label class="form-check-label" for="exampleCheck3">Message</label>
                          <input type="checkbox" class="form-check-input" id="exampleCheck4">
                          <label class="form-check-label" for="exampleCheck4">Setting</label>
                          <input type="checkbox" class="form-check-input" id="exampleCheck5">
                          <label class="form-check-label" for="exampleCheck5">Task Menu</label>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-success " data-dismiss="modal">Cancel</button>
                  <button type="button" class="btn btn-success">Add</button>
                </div>
              </div>
            </div>
          </div>
          <!--edit admin-->
          <div class="modal fade" id="editAdmin" tabindex="-1" role="dialog" aria-labelledby="editAdminLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="editAdminLabel">Edit Admin</h5>
